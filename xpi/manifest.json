{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "pdso",
  "version": "0.1.0a1",

  "description": "__MSG_extensionDescription_",
  "homepage_url": "https://bitbucket.org/eisf/pdso/",

  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "pdso.sceext@bitbucket.org",
      "strict_min_version": "61.0"
    }
  },

  "author": "sceext",

  "icons": {
    "48": "img/logo-48.png",
    "96": "img/logo-96.png"
  },

  "permissions": [
    "background",
    "downloads",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",

    "<all_urls>"
  ],

  "background": {
    "scripts": [ "js/main.js" ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "img/logo-32.png",
    "default_title": "pdso",
    "default_popup": "page/popup.html"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "js/contents.js" ]
    }
  ],

  "options_ui": {
    "page": "page/options.html"
  },

  "web_accessible_resources": [
    "img/logo.svg"
  ]
}
